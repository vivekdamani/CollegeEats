<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PendingOrdersDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/t1"
        android:id="@+id/user_details_name"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"

        android:id="@+id/t1"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_email"
        android:layout_below="@id/user_details_name"
        android:layout_toRightOf="@id/t2"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:layout_below="@id/user_details_name"
        android:layout_margin="10dp"
        android:text="Email Address"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_mobile"
        android:layout_below="@id/user_details_email"
        android:layout_toRightOf="@+id/t3"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        android:text="Mobile No."
        android:layout_below="@id/user_details_email"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details_mobile"
        android:id="@+id/user_details_address"
        android:layout_toRightOf="@+id/t4"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details_mobile"
        android:id="@+id/t4"
        android:text="Address"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_details_address"
        android:id="@+id/order_details_item"
        android:layout_toRightOf="@+id/t5"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_details_address"
        android:text="Order Details"

        android:id="@+id/t5"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_item"
        android:id="@+id/order_details_status"
        android:layout_toRightOf="@+id/t6"

        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_item"

        android:text="Order Status"
        android:id="@+id/t6"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_status"
        android:id="@+id/order_details_total"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/t7"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_status"
        android:id="@+id/t7"
        android:text="Order Total"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/changeStatus"
        android:layout_below="@+id/order_details_total"
        android:text="change status"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cancelOrder"
        android:layout_below="@+id/changeStatus"
        android:text="Cancel Order"
        />


</RelativeLayout>